{
  "name": "youtube-transcript-node",
  "version": "1.1.1",
  "description": "This is a Node.js API which allows you to get the transcripts/subtitles for a given YouTube video. It also works for automatically generated subtitles and supports translating subtitles.",
  "main": "src/index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/xatuke/youtube-transcript-node.git"
  },
  "homepage": "https://github.com/xatuke/youtube-transcript-node#readme",
  "bugs": {
    "url": "https://github.com/xatuke/youtube-transcript-node/issues"
  },
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js"
  },
  "keywords": [
    "youtube",
    "transcript",
    "subtitles",
    "youtube-api",
    "youtube-transcripts",
    "youtube-subtitles"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.0",
    "axios-retry": "^4.5.0",
    "xml2js": "^0.6.2",
    "html-entities": "^2.6.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1"
  }
}
